<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20sp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NFC ear tag"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"></TextView>

        <Button
            android:id="@+id/buttonScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan NFC" />

        <TextView

            android:id="@+id/officialID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Official ID"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/editTextOfficialID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/motherID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mother ID"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerMotherID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth date"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"></TextView>

        <CalendarView
            android:id="@+id/calendarBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/animalType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animal type"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerAnimalType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/race"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/race"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerRace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>
</ScrollView>
