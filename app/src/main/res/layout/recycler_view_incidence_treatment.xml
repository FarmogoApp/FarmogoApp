<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_recycler_bottom">


    <TextView
        android:id="@+id/incidence_treatment_animal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/incidence_treatment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incidence_treatment_animal_id"
        />
    <TextView
        android:id="@+id/incidence_treatment_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incidence_treatment_date"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/incidence_treatment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />



</RelativeLayout>
