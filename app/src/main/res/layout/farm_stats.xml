<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/farm_stats_chart_height"
        android:contentDescription="@string/chart_of_evolution"
        android:src="@drawable/barchart"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chart"
        android:gravity="center">


        <TextView
            android:id="@+id/label_cows_youger"
            android:layout_width="@dimen/farm_stats_label_width"
            android:layout_height="wrap_content"
            android:text="@string/cows_younger"
            android:textSize="@dimen/farm_stats_label_font_width"
            />

        <TextView
            android:id="@+id/cows_younger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_cows_youger"
            android:layout_toEndOf="@+id/label_cows_youger"
            android:textSize="@dimen/farm_stats_value_font_width"
            android:text="@string/number_example"
            />

        <TextView
            android:id="@+id/label_cows"
            android:layout_width="@dimen/farm_stats_label_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_cows_youger"
            android:text="@string/cows"
            android:textSize="@dimen/farm_stats_label_font_width"
            />

        <TextView
            android:id="@+id/cows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_cows"
            android:layout_toEndOf="@+id/label_cows"
            android:textSize="@dimen/farm_stats_value_font_width"
            android:text="@string/number_example"
            />

        <TextView
            android:id="@+id/label_bulls"
            android:layout_width="@dimen/farm_stats_label_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_cows"
            android:text="@string/bulls"
            android:textSize="@dimen/farm_stats_label_font_width"
            />

        <TextView
            android:id="@+id/bulls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_bulls"
            android:layout_toEndOf="@+id/label_bulls"
            android:textSize="@dimen/farm_stats_value_font_width"
            android:text="@string/number_example"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:text="@string/search"
        />

</RelativeLayout>



