<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farmogoapp.ui.main.animalIncidence.ExitFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/titleLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/Exit"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/typelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleLinear"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tipo"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type"/>

                <Spinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/exitType"
                    android:background="@drawable/spinner_bg"
                    android:layout_below="@+id/tipo"
                    android:entries="@array/exitType"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/destinationlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/typelinear"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/exitDestinationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/Destino"/>

                <EditText
                    android:id="@+id/exitDestinationEdit"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:background="@drawable/round_corner"
                    android:layout_below="@+id/exitDestinationText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/Destino"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/certificadolinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/destinationlinear"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/exitCertificadoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/guia_certificado"/>

                <EditText
                    android:id="@+id/exitCertificadoEdit"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:background="@drawable/round_corner"
                    android:layout_below="@+id/exitCertificadoText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/guia_certificado"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/certificadolinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp">
            <Button
                android:id="@+id/inregistercow"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/unregister_cow"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/round_shape"
                android:layout_margin="5dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
