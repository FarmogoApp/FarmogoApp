<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <TextView
        android:id="@+id/statistics_animal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem" />
    <TextView
        android:id="@+id/statistics_animal_incidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statistics_animal_id"
        tools:text="@tools:sample/lorem" />
    <TextView
        android:id="@+id/statistics_animal_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statistics_animal_date"
        android:layout_alignParentEnd="true"
        tools:text="@tools:sample/lorem" />
    <TextView
        android:id="@+id/statistics_animal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        tools:text="@tools:sample/lorem" />



</RelativeLayout>
